{
  "name": "tm-fetch",
  "version": "1.0.0",
  "description": "Trade Me property scraper",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx playwright install --with-deps",
    "start": "node index.js",
    "dev": "node index.js --dev",
    "test": "node index.js --test",
    "install-browsers": "npx playwright install --with-deps chromium",
    "build": "npm ci && npm run install-browsers",
    "deploy": "git add . && git commit -m 'Deploy update' && git push"
  },
  "dependencies": {
    "playwright": "^1.47.0",
    "axios": "^1.7.0",
    "cheerio": "^1.0.0-rc.12"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
