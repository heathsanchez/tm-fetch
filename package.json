{
  "name": "tm-fetcher",
  "version": "4.5.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc --watch & nodemon dist/server.js --dev",
    "test": "node dist/server.js --test",
    "install-browsers": "PLAYWRIGHT_BROWSERS_PATH=/opt/render/.cache/ms-playwright PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1 npx playwright install --with-deps chromium",
    "postinstall": "npm run install-browsers",
    "prebuild": "rm -rf dist",
    "deploy": "git add . && git commit -m 'Deploy update' && git push"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "express": "^4.21.1",
    "playwright": "^1.47.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.11",
    "nodemon": "^3.1.7",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20"
  }
}
